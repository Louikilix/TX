<h1>Writing Definitions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @writing_definitions.each do |writing_definition| %>
      <tr>
        <td>definition: </td>
        <td><%= link_to 'Show', [:admins, writing_definition] %></td>
        <td><%= link_to 'Edit', edit_admins_writing_definition_path(writing_definition) %></td>
        <td><%= link_to 'Destroy', [:admins, writing_definition], data: { confirm: 'Are you sure?' }, :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_with url: "writing_definitions/clean" do |form| %>
  <%= form.submit "Clean" %>
<% end %>
